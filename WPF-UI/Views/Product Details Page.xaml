<Page x:Class="WPF_UI.Views.Product_Details_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_UI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Product_Details_Page">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with current stage and change stage button -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Text="Current Stage: " FontSize="16" VerticalAlignment="Center"/>
                <TextBlock Text="{Binding CurrentStage.Name}" 
                         FontSize="16" 
                         FontWeight="Bold" 
                         Foreground="Blue"
                         VerticalAlignment="Center"/>
            </StackPanel>

            <Button Grid.Column="1" 
            Content="Change Stage" 
            Command="{Binding ChangeStageCommand}"
            Width="120"
            Height="30"
            Visibility="{Binding ButtonVisibility}"/>
        </Grid>

        <!-- Main Content -->
        <TabControl Grid.Row="1">
            <!-- Basic Info Tab -->
            <TabItem Header="Basic Information">
                <StackPanel Margin="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Left Column - Basic Info -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Name:" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Product.Name}" Margin="0,0,0,10"/>

                            <TextBlock Text="Description:" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Product.Description}" 
                                     TextWrapping="Wrap" 
                                     Margin="0,0,0,10"/>

                            <TextBlock Text="Dimensions:" FontWeight="Bold"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBlock Text="Height: "/>
                                <TextBlock Text="{Binding Product.EstimatedHeight}"/>
                                <TextBlock Text=" cm  "/>
                                <TextBlock Text="Width: "/>
                                <TextBlock Text="{Binding Product.EstimatedWidth}"/>
                                <TextBlock Text=" cm  "/>
                                <TextBlock Text="Weight: "/>
                                <TextBlock Text="{Binding Product.EstimatedWeight}"/>
                                <TextBlock Text=" kg"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Right Column - Current Stage Info -->
                        <Border Grid.Column="1" 
                                BorderBrush="LightGray" 
                                BorderThickness="1" 
                                Padding="10"
                                Background="#F5F5F5">
                            <StackPanel>
                                <TextBlock Text="Current Stage Details" 
                                         FontWeight="Bold" 
                                         Margin="0,0,0,10"/>
                                <TextBlock Text="Started on:"/>
                                <TextBlock Text="{Binding CurrentStageHistory.StartOfStage, StringFormat=d}"
                                         Margin="0,0,0,5"/>
                                <TextBlock Text="Set by:"/>
                                <TextBlock Text="{Binding CurrentStageHistory.User.Name}"
                                         Margin="0,0,0,5"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>
            </TabItem>

            <!-- BOM Tab -->
            <TabItem Header="Bill of Materials">
                <Grid Margin="10">
                    <DataGrid ItemsSource="{Binding BOMMaterials}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Material Number" 
                                              Binding="{Binding MaterialNumber}" 
                                              Width="Auto"/>
                            <DataGridTextColumn Header="Description" 
                                              Binding="{Binding MaterialDescription}" 
                                              Width="*"/>
                            <DataGridTextColumn Header="Quantity" 
                                              Binding="{Binding Quantity}" 
                                              Width="Auto"/>
                            <DataGridTextColumn Header="Unit" 
                                              Binding="{Binding UnitMeasureCode}" 
                                              Width="Auto"/>
                            <DataGridTextColumn Header="Weight per Unit" 
                                              Binding="{Binding Weight}" 
                                              Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Stage History Tab -->
            <TabItem Header="Stage History">
                <DataGrid ItemsSource="{Binding StageHistory}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="10">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Stage" 
                                          Binding="{Binding Stage.Name}" 
                                          Width="Auto"/>
                        <DataGridTextColumn Header="Started On" 
                                          Binding="{Binding StartOfStage, StringFormat=d}" 
                                          Width="Auto"/>
                        <DataGridTextColumn Header="Set By" 
                                          Binding="{Binding User.Name}" 
                                          Width="Auto"/>
                        <DataGridTextColumn Header="Duration" 
                                          Binding="{Binding Duration}" 
                                          Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
