<Page x:Class="WPF_UI.Views.User_DashBoard_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_UI.Views" xmlns:usercontrols="clr-namespace:WPF_UI.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="User_DashBoard_Page">
    
    <StackPanel Orientation="Vertical">
        <TextBlock Text="DashBoard" FontFamily="/Fonts/Comfortaa-VariableFont_wght.ttf #Comfortaa" FontSize="25" HorizontalAlignment="Center"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Expander Grid.Row="0" Header="Search Filters" IsExpanded="False">
                <usercontrols:SearchFilters />
            </Expander>


        </Grid>
    </StackPanel>
</Page>
