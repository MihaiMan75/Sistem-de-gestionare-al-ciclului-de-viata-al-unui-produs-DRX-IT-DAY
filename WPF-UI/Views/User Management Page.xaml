<Page x:Class="WPF_UI.Views.User_Management_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_UI.Views" xmlns:usercontrols="clr-namespace:WPF_UI.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="User_Management_Page">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="400"/>
        </Grid.ColumnDefinitions>

        <!-- Left side - Users List -->
        <GroupBox Header="Users" Grid.Column="0" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search Box -->
                <usercontrols:CostumTextBoxWithEraseButton Grid.Row="0" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Margin="5"
                         Height="25"
                         PlaceHodler="Search users..."/>

                <!-- Users DataGrid -->
                <DataGrid Grid.Row="1"
                          ItemsSource="{Binding Users}"
                          SelectedItem="{Binding SelectedUser}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          Margin="5">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" 
                                          Binding="{Binding Name}" 
                                          Width="*"/>
                        <DataGridTextColumn Header="Email" 
                                          Binding="{Binding Email}" 
                                          Width="*"/>
                        <DataGridTextColumn Header="Phone" 
                                          Binding="{Binding PhoneNumber}" 
                                          Width="Auto"/>
                        <DataGridTemplateColumn Header="Roles" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <ItemsControl ItemsSource="{Binding Roles}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="#007ACC" 
                                                        Margin="2" 
                                                        Padding="5,2" 
                                                        CornerRadius="3">
                                                    <TextBlock Text="{Binding RoleName}" 
                                                             Foreground="White"/>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Add User Button -->
                <Button Grid.Row="2"
                        Content="Add New User"
                        Command="{Binding AddNewUserCommand}"
                        HorizontalAlignment="Left"
                        Margin="5"
                        Width="120"
                        Height="30"/>
            </Grid>
        </GroupBox>

        <!-- Right side - User Details -->
        <GroupBox Header="User Details" Grid.Column="1">
            <StackPanel Margin="10">
                <TextBlock Text="Name:"/>
                <TextBox Text="{Binding CurrentUser.Name, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5,0,10"/>

                <TextBlock Text="Email:"/>
                <TextBox Text="{Binding CurrentUser.Email, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5,0,10"/>

                <TextBlock Text="Phone Number:"/>
                <TextBox Text="{Binding CurrentUser.PhoneNumber, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5,0,10"/>

                <TextBlock Text="Roles:" Margin="0,10,0,5"/>
                <ItemsControl ItemsSource="{Binding AvailableRoles}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding RoleName}"
                                      IsChecked="{Binding IsSelected}"
                                      Margin="0,5"/>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <GroupBox Header="Password" Margin="0,20,0,0">
                    <StackPanel Margin="5">
                        <TextBlock Text="New Password:"/>
                        <PasswordBox x:Name="PasswordBox"
                                   Margin="0,5,0,10"/>

                        <TextBlock Text="Confirm Password:"/>
                        <PasswordBox x:Name="ConfirmPasswordBox"
                                   Margin="0,5,0,10"/>
                    </StackPanel>
                </GroupBox>

                <StackPanel Orientation="Horizontal" 
                          HorizontalAlignment="Right" 
                          Margin="0,20,0,0">
                    <Button Content="Delete User"
                            Command="{Binding DeleteUserCommand}"
                            Width="100"
                            Margin="0,0,10,0"/>
                    <Button Content="Cancel"
                            Command="{Binding CancelCommand}"
                            Width="100"
                            Margin="0,0,10,0"/>
                    <Button Content="Save"
                            Command="{Binding SaveCommand}"
                            Width="100"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
