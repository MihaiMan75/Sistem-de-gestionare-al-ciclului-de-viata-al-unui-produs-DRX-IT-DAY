<Page x:Class="WPF_UI.Views.Reports_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_UI.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Reports_Page">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Report Parameters -->
        <GroupBox Header="Report Parameters" Grid.Row="0">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Report Type -->
                <StackPanel Grid.Column="0" Grid.Row="0" Margin="5">
                    <TextBlock Text="Report Type:" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding ReportTypes}"
                             SelectedItem="{Binding SelectedReportType}"
                             DisplayMemberPath="Name"
                             Height="25"/>
                </StackPanel>

                <!-- Date Range -->
                <StackPanel Grid.Column="1" Grid.Row="0" Margin="5">
                    <TextBlock Text="Start Date:" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding StartDate}"
                              Height="25"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Grid.Row="0" Margin="5">
                    <TextBlock Text="End Date:" Margin="0,0,0,5"/>
                    <DatePicker SelectedDate="{Binding EndDate}"
                              Height="25"/>
                </StackPanel>

                <!-- Additional Filters -->
                <StackPanel Grid.Column="0" Grid.Row="1" Margin="5">
                    <TextBlock Text="Stage:" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Stages}"
                             SelectedItem="{Binding SelectedStage}"
                             DisplayMemberPath="Name"
                             Height="25"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="1" Margin="5">
                    <TextBlock Text="User:" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding Users}"
                             SelectedItem="{Binding SelectedUser}"
                             DisplayMemberPath="Name"
                             Height="25"/>
                </StackPanel>

                <Button Grid.Column="2" 
                        Grid.Row="1"
                        Content="Apply Filters"
                        Command="{Binding ApplyFiltersCommand}"
                        Height="25"
                        Margin="5,23,5,0"/>
            </Grid>
        </GroupBox>

        <!-- Report Preview -->
        <GroupBox Header="Report Preview" Grid.Row="1" Margin="0,10">
            <Grid>
                <DataGrid ItemsSource="{Binding ReportData}"
                          AutoGenerateColumns="True"
                          IsReadOnly="True"
                          Margin="5"/>

                <!-- Loading Indicator -->
                <Grid Background="#80FFFFFF" >
                    <StackPanel HorizontalAlignment="Center" 
                              VerticalAlignment="Center">
                        <TextBlock Text="Generating Preview..."
                                 FontSize="16"
                                 Margin="0,0,0,10"/>
                        <ProgressBar IsIndeterminate="True"
                                   Width="200"
                                   Height="4"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </GroupBox>

        <!-- Export Options -->
        <GroupBox Header="Export Options" Grid.Row="2">
            <StackPanel Orientation="Horizontal" 
                      HorizontalAlignment="Right"
                      Margin="10">
                <StackPanel Orientation="Horizontal" 
                          VerticalAlignment="Center"
                          Margin="0,0,20,0">
                    <TextBlock Text="Include:" 
                             VerticalAlignment="Center"
                             Margin="0,0,10,0"/>
                    <CheckBox Content="Charts" 
                            IsChecked="{Binding IncludeCharts}"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"/>
                    <CheckBox Content="Details" 
                            IsChecked="{Binding IncludeDetails}"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"/>
                    <CheckBox Content="Summary" 
                            IsChecked="{Binding IncludeSummary}"
                            VerticalAlignment="Center"/>
                </StackPanel>

                <Button Content="Export to PDF"
                        Command="{Binding ExportToPdfCommand}"
                        Width="120"
                        Height="30"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
