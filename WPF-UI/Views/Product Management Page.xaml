<Page x:Class="WPF_UI.Views.Product_Management_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_UI.Views" xmlns:usercontrols="clr-namespace:WPF_UI.UserControls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Product_Management_Page">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Left side - Product List -->
        <GroupBox Header="Product List" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Margin="0,0,10,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Box -->
                <usercontrols:CostumTextBoxWithEraseButton Grid.Row="0" Margin="5" Height="25" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         PlaceHodler="Search products..."/>

                <!-- Products DataGrid -->
                <DataGrid Grid.Row="1" Margin="5" 
                          ItemsSource="{Binding Products}"
                          SelectedItem="{Binding SelectedProduct}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="2*"/>
                        <DataGridTemplateColumn Header="Actions" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Edit" Command="{Binding DataContext.EditCommand, 
                                                RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Margin="2"/>
                                        <Button Content="Delete" Command="{Binding DataContext.DeleteCommand,
                                                RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Margin="2"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <!-- Right side - Product Form -->
        <GroupBox Header="Product Details" Grid.Row="0" Grid.Column="1" Width="400">
            <StackPanel Margin="10">
                <TextBlock Text="Name:"/>
                <TextBox Text="{Binding CurrentProduct.Name, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5,0,10"/>

                <TextBlock Text="Description:"/>
                <TextBox Text="{Binding CurrentProduct.Description, UpdateSourceTrigger=PropertyChanged}"
                         TextWrapping="Wrap" Height="60"
                         Margin="0,5,0,10"/>

                <TextBlock Text="Height (cm):"/>
                <TextBox Text="{Binding CurrentProduct.EstimatedHeight, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5,0,10"/>

                <TextBlock Text="Width (cm):"/>
                <TextBox Text="{Binding CurrentProduct.EstimatedWidth, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5,0,10"/>

                <TextBlock Text="Weight (kg):"/>
                <TextBox Text="{Binding CurrentProduct.EstimatedWeight, UpdateSourceTrigger=PropertyChanged}"
                         Margin="0,5,0,10"/>

                <TextBlock Text="BOM:"/>
                <ComboBox ItemsSource="{Binding BOMs}"
                          SelectedItem="{Binding CurrentProduct.BOM}"
                          DisplayMemberPath="Name"
                          Margin="0,5,0,10"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button Content="Cancel" Command="{Binding CancelCommand}" 
                            Width="100" Margin="0,0,10,0"/>
                    <Button Content="Save" Command="{Binding SaveCommand}"
                            Width="100" IsDefault="True"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Page>
